@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="() => modal.Show()">Modal</button>
<Modal @ref="modal">
    <Footer>
        <button type="button" class="btn btn-primary" @onclick="() => modal.Close()">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => modal.Close()">Close</button>
    </Footer>
</Modal>

<input type="radio" name="isWeight" @onclick="Show" />
<button type="button" @onclick="Show">Show</button>
<WeightConverter @ref="WeightConverter"/>
@WeightConverter?.show;

@code{
    private Modal modal { get; set; }
    private bool weight = false;

    private WeightConverter WeightConverter { get; set; }
    private void Show()
    {
        WeightConverter.Show();        
    }
}